<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/book" >

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Geobook"
            android:textColor="#1919BA"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sign_in_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Sign in to get started"
            android:textColor="#1919BA"
            android:textSize="20sp"
            android:textStyle="italic" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_in_hint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/bypass_button"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@+id/google_sign_in_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Bypass" />

        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@+id/bypass_button"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="Sign out" />

        <Button
            android:id="@+id/revoke_access_button"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/sign_out_button"
            android:layout_below="@+id/sign_out_button"
            android:layout_marginTop="5dp"
            android:text="Revoke Access" />



    </RelativeLayout>

</ScrollView>